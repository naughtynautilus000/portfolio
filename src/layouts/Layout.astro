---
import Email from '../components/Email.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Socials from '../components/Socials.astro';

export interface Props {
	title: string;
	footerAbsolute?: boolean;
}

const { title, footerAbsolute } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-background scroll-smooth min-h-screen relative">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="text-white min-h-screen flex flex-col relative">
		<Header />
		<slot/>
		<Footer footerAbsolute={footerAbsolute}/>
		<Socials />
		<Email />
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background-color: #F6F6F6;
	}
	.wm-vlr {
		writing-mode: vertical-lr;	
	}

	main {
		max-width: calc(100vw - calc(2 * theme(width.sides)));
		width: calc(100vw - calc(2 * theme(width.sides)));
		margin: 0 auto
	}

	.socials-filter {
		filter: invert(51%) sepia(68%) saturate(493%) hue-rotate(153deg) brightness(94%) contrast(90%)
	}

	.socials-filter:hover {
		filter: brightness(0) saturate(100%) invert(83%) sepia(20%) saturate(1090%) hue-rotate(104deg) brightness(93%) contrast(95%);
	}

	@media (max-width: 1000px) {
		div:has(#email), div:has(#socials) {
			display: none;
		}

		main {
			max-width: calc(100vw - theme(width.sides));
		}
	}
</style>
